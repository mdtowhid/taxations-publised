@model IEnumerable<Taxations.Models.User>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Containers/Admin.cshtml";
}

<div id="adminUsersTableWrapper">
    <h2>All Users</h2>

    <table class="table" id="">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEmailConfirmed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmploymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAutistc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecoveryCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhoYouAre)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsEmailConfirmed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <img src="@item.PhotoPath.Replace("~", "")">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAutistc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecoveryCode)
                </td>
                <td>
                    @if(item.Bio!=null && item.Bio.Length > 50)
                    {
                        <p>@item.Bio.Substring(0,40)</p>
                    }
                    else {<p>@item.Bio</p> }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WhoYouAre)
                </td>
                <td>
                    @Html.ActionLink("Edit", "PutUser", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-successs" })
                    @Html.ActionLink("Details", "userdetails", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-successs" })
                </td>
            </tr>
        }

    </table>
</div>