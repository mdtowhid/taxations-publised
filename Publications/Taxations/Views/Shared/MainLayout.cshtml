<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Styles.Render("~/Content/_MainLayout")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="@Url.Content("~/Scripts/Main.js")"></script>
</head>

    <body>
        
        <header id="topMenu">
            @Html.Partial("~/views/components/topMenu.cshtml", null)
        </header>

        <div class="container-fluid" style="margin-top: 40px;">
            @RenderBody()
        </div>

        <div class="container-fluid ">
            @Html.Partial("~/views/components/footer.cshtml", null)
        </div>

        <script src="@Url.Content("~/Scripts/render-body-content-scripts.js")"></script>
        <script src="@Url.Content("~/Scripts/Calculator.js")"></script>
    </body>

</html>
