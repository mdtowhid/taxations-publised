
@{
    ViewBag.Title = "Get Password";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="container" style="max-width: 560px; margin: 0 auto">
    <div class="pb-3" id="sendingForm">
        <h3 class="mt-3 mb-3">Recover yor account</h3>
        <div></div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <p class="m-0">We have not found any records for <b>@ViewBag.Error</b></p>
                <p class="m-0 p-0">Please try again.</p>
            </div>
        }

        @if (ViewBag.Success != null)
        {
            <div class="alert alert-success font-weight-bolder">
                <p class="m-0">@ViewBag.Success</p>
            </div>
        }
        <hr />
        <div id="error"></div>
        @if (ViewBag.Success == null)
        {
            using (Html.BeginForm("getPassword", "Account", FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <label>Enter your email</label>
                    <input name="email" type="email" id="email" class="form-control" required />
                </div>
                <div>
                    <button type="submit" class="btn btn-sm btn-outline-info" id="send">Send</button>
                    <button class="btn btn-sm btn-outline-warning" id="cancel">Cancel</button>
                </div>
            }
        }

    </div>
</div>

<script src="@Url.Content("~/Scripts/RecoverPassword.js")"></script>

