<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/_HomeLayout")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <link href="https://fonts.googleapis.com/css?family=Maven+Pro&display=swap">
    <script src="@Url.Content("~/Scripts/Main.js")" type="text/javascript"></script>
</head>

    <body>

        <div class="custom-container-wrapper">
            <nav class="home-nav">
                <ul class="brand">
                    <li>
                        @Html.ActionLink("Taxations", "index", "index", null, new { @class = "" })
                    </li>
                </ul>
                <ul class="r-menu">
                    @*<li><a href="@Url.Action("signup", "account")">Sign Up</a></li>*@

                    <li>@Html.ActionLink("Sign Up", "signup", "account", null, null)</li>
                    <li><a href="@Url.Action("login", "account")">Log In</a></li>
                </ul>
            </nav>
            <div class="home-rend-content">
                @RenderBody()
            </div>
        </div>


        <div class="container-fluid">

            @Html.Partial("~/views/components/footer.cshtml", null)
        </div>

        <div class="container">
            <div class="row">
            </div>
        </div>

        <script>
            $(() => {
                $(window).scroll(function (e) {
                    if ($(window).scrollTop() >= 50) {
                        $('.home-nav').addClass('active');
                    } else {
                        $('.home-nav').removeClass('active');
                    }
                })
            });
        </script>
    </body>

</html>