@model Taxations.Models.StatementOfAsset

@using Taxations.Models;

@{
    ViewBag.Title = "Download Statement Of Assets";
    Layout = "~/Views/Shared/downloads.cshtml";

    UserInformation userInformation = new UserInformation();

    if (ViewBag.UserInformations != null)
    {
        userInformation = ViewBag.UserInformations;
    }

    StatementOfAsset statementOfAsset = new StatementOfAsset();
    if (ViewBag.StatementOfAsset != null)
    {
        statementOfAsset = ViewBag.StatementOfAsset;
    }
}

<div class="informations mt-3">
    @if (Model != null)
    {

        <div class="mt-3 ml-4">
            <br />
            <button onclick="getPDF('Statement Of Asset')" class="btn btn- btn-success">Download</button>
        </div>

        <div id="downloadWrapper">

            <div class="alert alert-success text-center render-body-heade" style="border-radius: 0">
                <h3 class="mb-2">STATEMENT OF ASSETS, LIABILITIES AND EXPENSES </h3>
                <p class="lead mt-1">under section 80(1) of the Income Tax Ordinance, 1984 (XXXVI of 1984)</p>
            </div>


            <div class="part">
                @Html.Partial("~/Views/StatementOfAssets/StatementOfAssetsPartOne.cshtml", null)
            </div>

            <div class="part mt-2">
                @Html.Partial("~/Views/StatementOfAssets/StatementOfAssetsPartTwo.cshtml", null)
            </div>
            <div class="part mt-2">
                @Html.Partial("~/Views/StatementOfAssets/StatementOfAssetsPartThree.cshtml", null)
            </div>
        </div>
    }
    else
    {
        <h3 class="text-danger">Please provide Particulars Of Statement Of Assets</h3>
    }
</div>

<style>
    .form-slides {
        display: block !important;
    }
</style>
<script src="@Url.Content("~/Scripts/PDFMaker.js")"></script>